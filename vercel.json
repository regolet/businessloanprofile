{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/admin.html",
      "dest": "public/admin.html"
    },
    {
      "src": "/admin.js",
      "dest": "public/admin.js"
    },
    {
      "src": "/admin-styles.css",
      "dest": "public/admin-styles.css"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}
