# Allow access to uploaded images
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Deny access to PHP files and other scripts
<FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|cgi|sh)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Prevent directory listing
Options -Indexes
